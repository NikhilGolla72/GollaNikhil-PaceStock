# Auto detect text files and perform LF normalization
* text=auto

# C++ files
*.cpp text eol=lf
*.h text eol=lf
*.hpp text eol=lf

# Python files
*.py text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf

# Scripts
*.ps1 text eol=crlf
*.sh text eol=lf

# Binary files
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.a binary
*.lib binary

